#!/bin/bash

source "/usr/local/bin/_common"
source "/usr/local/bin/_help"

service=$(normalize $1)

shift

SCRIPT="
  if [ -f script/bootstrap.before ]; then
    script/bootstrap.before
  fi

  if [ -f script/bootstrap ]; then
    script/bootstrap
  else
    gem install bundler
    bundle install --jobs 4
    rake db:create db:migrate
  fi

  if [ -f script/bootstrap.after ]; then
    script/bootstrap.after
  fi
"

docker-compose run \
  --rm \
  $service \
  /bin/sh -c "$SCRIPT"
