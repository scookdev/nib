#!/bin/bash
#
# Start a repl for the given container
#
#/* vim: set filetype=sh : */

source "/usr/local/bin/_common"
source "/usr/local/bin/_help"

SERVICE="$1"

local_history_path="${PWD}/tmp"

mkdir -p $local_history_path

docker-compose run \
  --rm \
  -e HISTFILE=/usr/src/app/tmp/shell_history \
  $SERVICE \
  /bin/sh -c "${SCRIPT}"
