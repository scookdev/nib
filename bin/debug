#!/bin/bash
#
# Fire up the debug script for a given service
#
#/* vim: set filetype=sh : */

source "/usr/local/bin/_help"
source "/usr/local/bin/_common"

ruby_debug_port() {
  PREFIX=""

  if compose_version2 ; then
    PREFIX=".services"
  fi

  DEBUG_SETTING=$(
    compose_json | \
      jq "${PREFIX}.$1.environment" | \
      grep "RUBY_DEBUG_PORT" | \
      tr ':' '=' | \
      tr '[,"]' ' '
  )

  PORT="${DEBUG_SETTING#*=}"

  if [ -z "$PORT" ] || [ "null" == "$PORT" ]; then
    exit 1
  else
    echo $PORT
  fi
}

SERVICE=$1

if [ -z "$DOCKER_HOST_URL" ]; then
  HOST=$(ip route | awk 'NR==1 {print $3}')
else
  HOST=$(echo $DOCKER_HOST_URL | sed -E -e 's/(tcp:\/\/|:([0-9]{4}))//g')
fi

if [ -z "$1" ]; then
  show_help
else
  RUBY_DEBUG_PORT=$(ruby_debug_port $SERVICE)

  if [ $? == 1 ]; then
    echo "The service is not defined or the ruby_debug_port is missing"
    show_help
    exit 1
  fi

  echo "Connecting to byebug server $HOST:$RUBY_DEBUG_PORT..."

  docker-compose run \
    --rm \
    --no-deps \
    $SERVICE \
    byebug -R $HOST:$RUBY_DEBUG_PORT
fi
